{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es2017",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "types": [
            "@nodecg/types/augment-window"
        ],
        "strictNullChecks": true,
        "paths": {
            "types/*": [
                "src/types/*"
            ],
            "browser-shared/*": [
                "src/browser-shared/*"
            ],
            "shared/*": [
                "src/shared/*"
            ],
            "components/*": [
                "src/graphics/components/*"
            ],
            "schemas": [
                "../ipl-overlay-controls/src/types/schemas/index"
            ]
        },
        "resolveJsonModule": true
    },
    "include": [
        "src/dashboard/**/*.ts",
        "src/dashboard/**/*.vue",
        "src/graphics/**/*.ts",
        "src/graphics/**/*.vue",
        "src/browser-shared/**/*.ts"
    ]
}

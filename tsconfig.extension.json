{
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "module": "commonjs",
        "rootDir": "src/",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "types/*": [
                "src/types/*"
            ],
            "shared/*": [
                "src/shared/*"
            ],
            "schemas": [
                "../ipl-overlay-controls/src/types/schemas/index"
            ]
        },
        "outDir": "extension",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/extension/**/*.ts",
        "src/types/**/*.ts"
    ]
}
